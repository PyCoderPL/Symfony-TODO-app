{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="container">
		{% for message in app.flashes('login_notice') %}
			<div class="alert alert-success d-flex justify-content-center">
				{{ message }}
			</div>
		{% endfor %}
		<form method="post">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
			<label for="inputUsername" class="form-label">Username</label>
			<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control w-25 mb-3" autocomplete="" required autofocus>
			<label for="inputPassword" class="form-label">Password</label>
			<input type="password" name="password" id="inputPassword" class="form-control w-25 mb-3" autocomplete="current-password" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn btn-lg btn-primary mt-3 btn-sm" type="submit">
				Sign in
			</button>
		</form>
	</div>
{% endblock %}
